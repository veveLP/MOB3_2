<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>


    <TextView
            android:text="TextView"
            android:layout_width="207dp"
            android:layout_height="23dp" android:id="@+id/textView"
            android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"/>
    <CheckBox
            android:text="Zobrazit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/button" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <RadioGroup
            android:layout_width="360dp"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/checkBox">
        <RadioButton
                android:text="Počet písmen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"/>

        <RadioButton
                android:text="Počet slov"
                android:layout_width="118dp"
                android:layout_height="wrap_content" android:id="@+id/radioButton2"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:layout_marginEnd="40dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

